<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RelaContent">

        <ImageView
            android:id="@+id/ImPostRetrieve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/tvUsernameP"
            android:layout_marginEnd="10dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvUsernameP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:hint="Pierre" />

        <TextView
            android:id="@+id/tvHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="320dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            />

        <LinearLayout
            android:layout_below="@+id/ImPostRetrieve"
            android:orientation="horizontal"
            android:id="@+id/linView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ImSh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/ic_baseline_near_me_24" />

                    <ImageView
                        android:id="@+id/ImMes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/ic_baseline_chat_bubble_outline_24" />

                    <ImageView
                        android:id="@+id/ImFav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/ic_baseline_favorite_24" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linView">
                    <TextView

                        android:id="@+id/tvDescriptionP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:hint="Description" />
        </LinearLayout>


    </RelativeLayout>
    <View
        android:layout_marginTop="15dp"
        android:layout_below="@+id/RelaContent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#818181"/>
</RelativeLayout>